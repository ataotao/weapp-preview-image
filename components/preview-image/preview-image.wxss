/* components/preview-image/preview-image.wxss */
.preview-image-content{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #000000;
  z-index: 1000;
  flex-direction: column;
  flex-wrap: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: opacity .3s;
  overflow: hidden;
}
.preview-image-show{
  opacity: 1;
  visibility: visible;
}
.preview-image-loading{
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.preview-image-loading .rotate {
  color: #cccccc;
  font-size: 30rpx;
}
.preview-image-list{
  display: flex;
  /* transform: translateX(0); */
  transition: all 0.7s ease 0s;
  overflow: hidden;
  height: 100%;
}
.preview-image-item{
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.preview-image-head{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  left: 0;
  top: 20rpx;
  color: #fff;
  display:flex;
  justify-content: space-between;
  z-index: 9999;
}

.preview-image-head .preview-image-current{
  padding-left: 30rpx;
  flex: 1;
}

.preview-image-close{
  margin-right: 15rpx;
  margin-top: 5rpx;
  width: 100rpx;
  text-align: right;
  position: relative;
}

.preview-image-close::after{
  content: '×';
  position: absolute;
  top: -10rpx;
  right: 8rpx;
  font-size: 55rpx;
}

.preview-image-title{
  width: 100%;
  position: absolute;
  padding-left: 30rpx;
  left: 0;
  bottom: 20rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #fff;
  z-index: 9999;
}

/* 在 Chrome and Safari中，当我们使用CSS transforms 或者 animations时可能会有页面闪烁的效果，下面的代码可以修复此情况： */
.tran {  
  -webkit-backface-visibility: hidden;  
  -moz-backface-visibility: hidden;  
  -ms-backface-visibility: hidden; 
  backface-visibility: hidden;  
  -webkit-perspective: 1000;  
  -moz-perspective: 1000;  
  -ms-perspective: 1000;  
  perspective: 1000;  
  /* transform: translateZ(0); */
  -webkit-transform: translate3d(0,0,0);
  transform: translate3d(0,0,0);
  /* Other transform properties here */
}
